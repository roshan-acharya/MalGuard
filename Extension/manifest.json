{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",
  "description": "Detect phishing websites using AI backend.",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "PhishGuard",
    "default_popup": "popup.html"
  }
}
