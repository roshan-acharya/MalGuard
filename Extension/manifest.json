{
  "manifest_version": 3,
  "name": "MalGuard",
  "version": "1.0",
  "description": "Detect phishing websites using ML backend.",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["https://malguard.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "MalGuard",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
